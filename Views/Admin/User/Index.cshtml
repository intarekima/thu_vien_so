@model List<thuvienso.Models.User>
@{
    ViewData["Title"] = "Trang Danh Sách Người Dùng";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}
@await Html.PartialAsync("~/Views/Shared/Admin/_Notification.cshtml")

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6"><h3 class="mb-0">Danh Sách Người Dùng</h3></div>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <a href="/admin/user/create" class="card-title btn btn-primary text-white flex-shrink-0">
                            <i class="bi bi-plus-lg"></i> Tạo mới
                        </a>

                        <form method="get" class="card-search mb-2 mt-4" style="flex-basis: 100%">
                            <div class="row g-2 mb-2 justify-content-end">
                                <!-- Ô tìm kiếm tên/email/sđt -->
                                <div class="col-3">
                                    <input type="search" name="search" class="form-control" placeholder="Tên người dùng, email, sđt"
                                           value="@Context.Request.Query["search"]" />
                                </div>

                                <!-- Chọn vai trò -->
                                <div class="col-2">
                                    <select name="role" class="form-control">
                                        <option value="">-- Chọn vai trò --</option>
                                        <option value="admin" selected="@(Context.Request.Query["role"] == "admin")">Quản trị viên</option>
                                        <option value="user" selected="@(Context.Request.Query["role"] == "user")">Người dùng</option>
                                    </select>
                                </div>

                                <!-- Nút tìm kiếm -->
                                <div class="col-1">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </div>
                            </div>
                        </form>

                    </div>

                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Họ tên</th>
                                    <th>Email</th>
                                    <th>SĐT</th>
                                    <th>Vai trò</th>
                                    <th>Ngày tạo</th>
                                    <th class="text-center">Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.Name</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>
                                                @if (item.Role == "admin")
                                                {
                                                    <span class="badge bg-danger">Admin</span>
                                                }
                                                else
                                                {
                                                    @:user
                                                }
                                            </td>

                                            <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td class="text-center">
                                                <a href="/admin/user/edit/@item.Id" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                                                <a href="/admin/user/delete/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xoá người dùng này không?');">Xoá</a>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">Không có người dùng nào.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    string queryString = "";

    var q = Context.Request.Query;
    if (!string.IsNullOrEmpty(q["search"]))
        queryString += $"search={q["search"]}&";
    queryString = queryString.TrimEnd('&');
}

@await Html.PartialAsync("~/Views/Shared/Admin/_Pagination.cshtml", new {
CurrentPage = ViewBag.CurrentPage ?? 1,
    PageSize = ViewBag.PageSize ?? 10,
    TotalItems = ViewBag.TotalItems ?? 0,
    QueryString = queryString
})